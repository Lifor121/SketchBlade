<UserControl x:Class="SketchBlade.Views.Controls.BattleNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="NotificationControl">
    
    <Grid x:Name="MainGrid">
        <Border x:Name="NotificationBorder"
                Background="#99000000" 
                BorderBrush="#66FFFFFF" 
                BorderThickness="1"
                CornerRadius="6"
                Padding="10,6"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Opacity="0">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.4" BlurRadius="6"/>
            </Border.Effect>
            
            <TextBlock x:Name="NotificationText"
                       Text=""
                       FontSize="13"
                       FontWeight="Normal"
                       Foreground="#E0E0E0"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="300">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.6"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
    </Grid>
</UserControl> 